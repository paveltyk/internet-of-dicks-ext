{
  "manifest_version": 3,
  "name": "Internet of Dicks",
  "version": "0.1",
  "description": "Draw a dick on any webpage",
  "permissions": ["scripting", "activeTab", "tabs"],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Toggle Drawing"
  },
  "background": {
    "service_worker": "toggle.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["draw.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
